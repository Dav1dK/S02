{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://itxtp.org/schemas/Request_PlaySound.json",
    "type": "object",
    "title": "ITxPT S02P08 MADT service - MADT PlaySound request JSON Schema Definition",
    "description": "ITxPT Service Interface for Real-time Information relating to Public Transport Operations. - JSON Schema with explicit functional services",
    "default": {},
    "additionalProperties": true,
    "required": [
        "req",
        "soundFlags",
        "soundId"
    ],
    "properties": {
        "req": {
            "$id": "#/properties/req",
            "type": "string",
            "const": "PlaySound"
        },
        "soundFlags": {
            "$id": "#/properties/soundFlags",
            "type": "string",
            "enum": ["00003", "00013", "10003", "10013",
                     "00002", "00012", "10002", "10012",
                     "00001", "00011", "10001", "10011",
                     "00000", "00010", "10000", "10010"]
        },  
        "soundId": {
            "$id": "#/properties/soundId",
            "type": "string",
            "examples": [
                "SystemAsterisk",
                "SystemExclamation",
                "SystemExit",
                "SystemHand",
                "SystemNotification",
                "SystemQuestion",
                "SystemStart"
            ]
        }
    }
}