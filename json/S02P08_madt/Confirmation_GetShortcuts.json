{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "ITxPT S02P08v2.1.1 MADT service - MADT GetShortcuts response JSON Schema Definition",
    "description": "ITxPT Service Interface for Real-time Information relating to Public Transport Operations. - JSON Schema with explicit functional services",
    "default": {},
    "additionalProperties": true,
    "required": [
        "retCode",
        "shortcuts"
    ],
    "properties": {
        "retCode": {
            "$id": "#/properties/retCode",
            "type": "integer",
            "enum": [0, 1, 2, 3, 4]
        },
        "shortcuts": {
            "type": "array",
            "items": { "$ref": "#/$defs/shortcutInfo"}
        }
    },
    "$defs": {
        "shortcutInfo": {
            "type": "object",
            "properties": {
                "shortcutId": {
                    "type": "integer"
                },
                "shortcutPos": {
                    "type": "integer"
                },
                "flags": {
                    "type": "integer"
                },
                "iconUrl": {
                    "type": "string"
                },
                "url": {
                    "type": "string"
                }
            },
            "required": ["shortcutId", "shortcutPos", "flags", "iconUrl", "url"]
        }
    }
}